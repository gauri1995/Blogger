<h1><%= @blog.title %></h1>
<p><%= @blog.body %></p>
<% if @blog.image.exists? %>
      <%= image_tag @blog.image.url (:medium)%><br/>
  <% end %>
<h3>Comments (<%= @blog.comments.size %>)</h3>
<%= render partial: 'blogs/comment', collection: @blog.comments %>
<%= render partial: 'comments/form' %>

<%= link_to "<< Back to Blogs List", blogs_path %>
<%= link_to "delete", blog_path(@blog), method: :delete,data: {confirm: "Really delete the article?"}%>

<%= link_to "edit", edit_blog_path(@blog) %>

