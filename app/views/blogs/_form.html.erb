<%= form_for(@blog, html: {multipart: true}) do |f| %>

  <ul>
  <% @blog.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
  <% if @blog.image.exists? %>
      <%= image_tag @blog.image.url (:medium)%><br/>
  <% end %>
  <%= f.label :image, "Attach a New Image" %><br/>
  <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


